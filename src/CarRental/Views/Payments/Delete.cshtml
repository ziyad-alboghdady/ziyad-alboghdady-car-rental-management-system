@model CarRental.Models.Payment

@{
    ViewData["Title"] = "Delete Payment";
}

<h2>Delete Payment</h2>

<div class="alert alert-warning mt-3">
    Are you sure you want to delete this payment?
</div>

<div class="card">
    <div class="card-body">
        <p><b>Payment ID:</b> @Model.PaymentId</p>
        <p><b>Total:</b> @Model.TotalPrice</p>
        <p><b>Paid:</b> @Model.PaidPrice</p>
        <p><b>Payment Type:</b> @Model.PaymentType</p>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="PaymentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
