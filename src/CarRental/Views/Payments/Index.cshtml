@model IEnumerable<CarRental.Models.Payment>

@{
    ViewData["Title"] = "Payments";
}

<h2 class="mb-3">Payments</h2>

<a asp-action="Create" class="btn btn-success mb-3">Add Payment</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Total</th>
            <th>Paid</th>
            <th>Payment Type</th>
            <th>Discount</th>
            <th>Issued By</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var p in Model)
{
        <tr>
            <td>@p.PaymentId</td>
            <td>@p.TotalPrice</td>
            <td>@p.PaidPrice</td>
            <td>@p.PaymentType</td>
            <td>@p.DiscountId</td>
            <td>@p.IssuedBy</td>
            <td>
                <a asp-action="Details" asp-route-id="@p.PaymentId">Details</a> |
                <a asp-action="Edit" asp-route-id="@p.PaymentId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@p.PaymentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
