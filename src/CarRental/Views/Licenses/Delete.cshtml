@model CarRental.Models.License

@{
    ViewData["Title"] = "Delete License";
}

<h2>Delete License</h2>

<div class="alert alert-warning mt-3">
    Are you sure you want to delete this license?
</div>

<div class="card">
    <div class="card-body">
        <p><b>License Number:</b> @Model.LicenceNumber</p>
        <p><b>Start:</b> @Model.StartingDate</p>
        <p><b>End:</b> @Model.EndingDate</p>
        <p><b>Valid:</b> @(Model.IsValid == true ? "Yes" : "No")</p>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="LicenceNumberId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
