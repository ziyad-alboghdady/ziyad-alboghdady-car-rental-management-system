@model CarRental.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<h2>Delete Customer</h2>

<div class="alert alert-warning mt-3">
    Are you sure you want to delete this customer?
</div>

<div class="card">
    <div class="card-body">
        <p><b>Person ID:</b> @Model.PersonId</p>
        <p><b>Name:</b> @(Model.Person?.FirstName) @(Model.Person?.LastName)</p>
        <p><b>Phone:</b> @Model.Person?.PhoneNumber</p>
        <p><b>Email:</b> @Model.Person?.Email</p>
        <p><b>License ID:</b> @Model.LicenceNumberId</p>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="PersonId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
