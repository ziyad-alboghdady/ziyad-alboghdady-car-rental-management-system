@model CarRental.Models.Customer

@{
    ViewData["Title"] = "Create Customer";
}

<h2>Create Customer</h2>

<form asp-action="Create" method="post">

    <h5 class="mt-3">Person Information</h5>
    <hr />

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">National ID</label>
            <input name="Person.NationalId" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Gender</label>
            <select name="Person.Gender" class="form-select">
                <option value="">-- Select --</option>
                <option value="M">M</option>
                <option value="F">F</option>
            </select>
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">First Name</label>
            <input name="Person.FirstName" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Last Name</label>
            <input name="Person.LastName" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Age</label>
            <input name="Person.Age" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Date of Birth</label>
            <input name="Person.DateOfBirth" type="date" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Phone</label>
            <input name="Person.PhoneNumber" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Email</label>
            <input name="Person.Email" class="form-control" />
        </div>

        <div class="col-md-12 mb-3">
            <label class="form-label">Address</label>
            <input name="Person.Address" class="form-control" />
        </div>
    </div>

    <h5 class="mt-4">Customer Information</h5>
    <hr />

    <div class="mb-3">
        <label asp-for="LicenceNumberId" class="form-label">License ID (Optional)</label>
        <input asp-for="LicenceNumberId" class="form-control" />
        <span asp-validation-for="LicenceNumberId" class="text-danger"></span>
        <small class="text-muted">Must exist in Licenses table if provided.</small>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
