@model CarRental.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Delete Employee</h2>

<div class="alert alert-warning mt-3">
    Are you sure you want to delete this employee?
</div>

<div class="card">
    <div class="card-body">
        <p><b>Person ID:</b> @Model.PersonId</p>
        <p><b>Name:</b> @(Model.Person?.FirstName) @(Model.Person?.LastName)</p>
        <p><b>Salary:</b> @Model.Salary</p>
        <p><b>Permissions:</b> @Model.Permissions</p>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="PersonId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
