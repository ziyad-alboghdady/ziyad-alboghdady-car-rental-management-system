@model CarRental.Models.RentalContract

@{
    ViewData["Title"] = "Edit Rental Contract";
}

<h2>Edit Rental Contract</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ContractId" />

    <div class="mb-3">
        <label asp-for="CustomerId" class="form-label">Customer</label>
        <select asp-for="CustomerId" class="form-select" asp-items="ViewBag.CustomerId"></select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CarId" class="form-label">Car</label>
        <select asp-for="CarId" class="form-select" asp-items="ViewBag.CarId"></select>
        <span asp-validation-for="CarId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StartingDate" class="form-label"></label>
        <input asp-for="StartingDate" type="date" class="form-control" />
        <span asp-validation-for="StartingDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EndingDate" class="form-label"></label>
        <input asp-for="EndingDate" type="date" class="form-control" />
        <span asp-validation-for="EndingDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PaymentId" class="form-label"></label>
        <input asp-for="PaymentId" class="form-control" />
        <span asp-validation-for="PaymentId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ApprovedById" class="form-label"></label>
        <input asp-for="ApprovedById" class="form-control" />
        <span asp-validation-for="ApprovedById" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Update</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
