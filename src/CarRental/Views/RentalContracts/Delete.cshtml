@model CarRental.Models.RentalContract

@{
    ViewData["Title"] = "Delete Contract";
}

<h2>Delete Contract</h2>

<div class="alert alert-warning mt-3">
    Are you sure you want to delete this contract?
</div>

<div class="card">
    <div class="card-body">
        <p><b>Contract:</b> @Model.ContractId</p>
        <p><b>Customer ID:</b> @Model.CustomerId</p>
        <p><b>Car:</b> @Model.Car?.CarName (@Model.Car?.PlateNumber)</p>
        <p><b>Start:</b> @Model.StartingDate</p>
        <p><b>End:</b> @Model.EndingDate</p>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="ContractId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
