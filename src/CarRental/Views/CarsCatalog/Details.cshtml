@model CarRental.Models.CarsCatalog

@{
    ViewData["Title"] = "Car Details";
}

<h2>Car Details</h2>

<div class="card mt-3">
    <div class="card-body">
        <h4 class="card-title">@Model.CarName (@Model.ModelYear)</h4>

        <dl class="row mt-3">
            <dt class="col-sm-3">Plate Number</dt>
            <dd class="col-sm-9">@Model.PlateNumber</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.CarCategory?.CategoryName</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.Status == 1 ? "bg-success" : "bg-danger")">
                    @(Model.Status == 1 ? "Available" : "Not Available")
                </span>
            </dd>

            <dt class="col-sm-3">Fuel Type</dt>
            <dd class="col-sm-9">@Model.FuelType</dd>

            <dt class="col-sm-3">Fuel Level</dt>
            <dd class="col-sm-9">@Model.FuelLevel %</dd>

            <dt class="col-sm-3">Distance</dt>
            <dd class="col-sm-9">@Model.DistanceKm km</dd>
        </dl>

        <a asp-action="Edit" asp-route-id="@Model.CarId" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
    </div>
</div>
