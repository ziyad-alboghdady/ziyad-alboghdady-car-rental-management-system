@model CarRental.Models.CarsCatalog

@{
    ViewData["Title"] = "Delete Car";
}

<h2>Delete Car</h2>

<div class="alert alert-warning mt-3">
    Are you sure you want to delete this car?
</div>

<div class="card">
    <div class="card-body">
        <p><b>Name:</b> @Model.CarName</p>
        <p><b>Model Year:</b> @Model.ModelYear</p>
        <p><b>Plate:</b> @Model.PlateNumber</p>
        <p><b>Category:</b> @Model.CarCategory?.CategoryName</p>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="CarId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
